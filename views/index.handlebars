<div class="jumbotron bg-transparent text-center text-white">
    <h1 class="display-4">Scraped Articles</h1>
        {{!-- <p class="lead">Check out all of the articles that have been saved by a user at some point. To remove them from the database, click remove.</p> --}}
</div>
{{!-- Cards --}}
<div class="container">
    {{#if article}}
    <div class="card-columns mt-3 mb-3 rounded text-center">
        {{#each article}}
        <div class="card shadow mt-3" style="width: 18rem;">
            {{#if image}}
            <img src="{{image}}" class="card-img-top" alt="...">
            {{else}}
            <img src="./img/pitch.jpg" class="card-img-top" alt="...">
            {{/if}}
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <a href="{{link}}" class="btn btn-primary" target="_blank">View Article</a>
                <a class="btn btn-secondary save-article text-white" data-id="{{_id}}">Save Article</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
        <h3 class="text-center mt-3 p-4 bg-white rounded">There are currently no articles available. Scrape some!</h3>
    {{/if}}
</div>

<!-- Modal -->
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="modal-text"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>