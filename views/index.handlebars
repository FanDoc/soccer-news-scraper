<div class="container">
    {{#if article}}
    <div class="card-columns mt-3 mb-3 rounded text-center">
        {{#each article}}
        <div class="card shadow mt-3" style="width: 18rem;">
            {{#if image}}
            <img src="{{image}}" class="card-img-top" alt="...">
            {{else}}
            <img src="./img/pitch.jpg" class="card-img-top" alt="...">
            {{/if}}
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <a href="{{link}}" class="btn btn-primary" target="_blank">View Article</a>
                <a href="{{link}}" class="btn btn-secondary" class="save-article">Save Article</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
        <h3 class="text-center mt-3 p-4 bg-white rounded">There are currently no articles available. Scrape some!</h3>
    {{/if}}
</div>